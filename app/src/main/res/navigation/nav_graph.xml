<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.pictureme.views.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.example.pictureme.views.ExploreFragment"
        android:label="fragment_explore"
        tools:layout="@layout/fragment_explore" />
    <fragment
        android:id="@+id/letsgoFragment"
        android:name="com.example.pictureme.views.LetsgoFragment"
        android:label="fragment_letsgo"
        tools:layout="@layout/fragment_letsgo" >
        <action
            android:id="@+id/action_letsgoFragment_to_shakeFragment"
            app:destination="@id/shakeFragment" />
    </fragment>
    <fragment
        android:id="@+id/friendsFragment"
        android:name="com.example.pictureme.views.FriendsFragment"
        android:label="fragment_friends"
        tools:layout="@layout/fragment_friends" />
    <fragment
        android:id="@+id/shakeFragment"
        android:name="com.example.pictureme.views.ShakeFragment"
        android:label="fragment_shake"
        tools:layout="@layout/fragment_shake" >
        <action
            android:id="@+id/action_shakeFragment_to_picMeFragment"
            app:destination="@id/picMeFragment" />
    </fragment>
    <fragment
        android:id="@+id/picMeFragment"
        android:name="com.example.pictureme.PicMeFragment"
        android:label="fragment_pic_me"
        tools:layout="@layout/fragment_pic_me" />
</navigation>